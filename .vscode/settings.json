{
    "discord.enabled": true,
    "vim.useSystemClipboard": true, // 允许 Vim 使用系统剪贴板
    "vim.visualModeKeyBindingsNonRecursive": [
      {
        "before": ["y"],
        "after": ["\"", "+", "y"] // 视觉模式下用 `y` 复制到系统剪贴板
      }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
      {
        "before": ["p"],
        "after": ["\"", "+", "p"] // 普通模式下用 `p` 粘贴系统剪贴板内容
      }
  ]
}